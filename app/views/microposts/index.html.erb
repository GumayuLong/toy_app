<p style="color: green"><%= notice %></p>

<% content_for :title, "Microposts" %>

<h1 style="text-align: center; color: red">Microposts</h1>

<table style="border: solid 1px black; border-radius: 10px; margin: 0 auto">
  <thead>
    <tr>
      <th style="border-right: solid 1px black; border-bottom: solid 1px black; padding: 15px">Content</th>
      <th style="border-right: solid 1px black; border-bottom: solid 1px black; padding: 15px">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td style="border-right: solid 1px black"><%= micropost.content %></td>
        <td style="border-right: solid 1px black; text-align: center"><%= micropost.user_id %></td>
        <td><%= link_to 'Show micropost', micropost %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="text-align: center; margin-top: 20px">
  <%= link_to "New micropost", new_micropost_path %>
</div>
