<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<h1 style = "margin: 10px auto; text-align: center; color: red">Users</h1>

<table style="border: solid 1px black; border-radius: 10px">
  <thead>
    <tr>
      <th style="border-right: solid 1px black; border-bottom: solid 1px black">Name</th>
      <th style="border-right: solid 1px black; border-bottom: solid 1px black">Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="border-right: solid 1px black"><%= user.name %></td>
        <td style="border-right: solid 1px black"><%= user.email %></td>
        <td><%= link_to 'Show user', user %></td>
        <td><%= link_to 'Edit user', edit_user_path(user) %></td>
        <td><%= link_to 'Delete user', user, method: :delete, data: {confirm: 'Are you sure ?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<hr>

<%= link_to "New user", new_user_path %>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
